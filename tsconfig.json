{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",

    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "moduleResolution": "node",
    "allowJs": false,
    "noImplicitAny": false,

    "types": ["node", "jest"],

    "ignoreDeprecations": "6.0"
  },

  "include": ["src/**/*"],

  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "eslint.config.mts"
  ]
}
